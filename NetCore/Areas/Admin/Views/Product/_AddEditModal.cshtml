<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add edit product</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <label class="col-sm-2 control-label no-padding-right">Menu Parent</label>
                            <div class="col-sm-10">
                                <input id="ddlCategoryIdM" class="form-control" name="ddlCategoryIdM" value="" style="width:200px !important">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="hidIdM" value="0" />
                            <label for="txtNameM" class="col-sm-2 control-label no-padding-right">Name</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtNameM" class="form-control" id="txtNameM" placeholder="Name Product">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtCodeM" class="col-sm-2 control-label no-padding-right">Code</label>
                            <div class="col-sm-5">
                                <input type="text" name="txtCodeM" class="form-control" id="txtCodeM" placeholder="Code Product">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtDescM" class="col-sm-2 control-label no-padding-right">Description</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtDescM" class="form-control" id="txtDescM"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtInfoM" class="col-sm-2 control-label no-padding-right">Info Short</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtInfoM" class="form-control" id="txtInfoM"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtContM" class="col-sm-2 control-label no-padding-right">Content</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtContM" class="form-control" id="txtContM"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtImageM" class="col-sm-2 control-label no-padding-right">Images</label>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input type="text" name="txtImageM" class="form-control" id="txtImageM" />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-btn">
                                        <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtPriceM" class="col-sm-2 control-label no-padding-right">Price</label>
                            <div class="col-sm-3">
                                <input type="number" name="txtPriceM" class="form-control" id="txtPriceM">
                            </div>
                            <label for="txtPriceSaleM" class="col-sm-3 control-label no-padding-right">PriceSale</label>
                            <div class="col-sm-3">
                                <input type="number" name="txtPriceSaleM" class="form-control" id="txtPriceSaleM">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtNotePM" class="col-sm-2 control-label no-padding-right">Note Price</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtNotePM" class="form-control" id="txtNotePM" placeholder="Price Note">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtWarM" class="col-sm-2 control-label no-padding-right">Waranty</label>
                            <div class="col-sm-2">
                                <input type="number" name="txtWarM" class="form-control" id="txtWarM">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtAgeM" class="col-sm-2 control-label no-padding-right">
                                expiry date
                            </label>
                            <div class="col-sm-2">
                                <input type="number" name="txtAgeM" class="form-control" id="txtAgeM">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtSaleM" class="col-sm-2 control-label no-padding-right">Sale</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSaleM" class="form-control" id="txtSaleM" placeholder="Sale">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSizeM" class="col-sm-2 control-label no-padding-right">Size Product</label>
                            <div class="col-sm-5">
                                <input type="number" name="txtSizeM" class="form-control" id="txtSizeM">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtOrderM" class="col-sm-2 control-label no-padding-right">Sort</label>
                            <div class="col-sm-2">
                                <input type="number" name="txtOrderM" class="form-control" id="txtOrderM">
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="txtSeoTitleM" class="col-sm-2 control-label no-padding-right">SEO Title</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSeoTitleM" class="form-control" id="txtSeoTitleM">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtSeoKeywordM" class="col-sm-2 control-label no-padding-right">SEO Keyword</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoKeywordM">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSeoDescriptionM" class="col-sm-2 control-label no-padding-right">SEO Description</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtSeoDescription" class="form-control" id="txtSeoDescriptionM"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtTagM" class="col-sm-2 control-label no-padding-right">Seo Tag</label>
                            <div class="col-sm-10">
                                <input type="text"  name="txtTagM" class="form-control" id="txtTagM" style="min-width:80%" />

                             </div>
                        </div>
                        <div class="form-group">
                            <label for="sdsd" class="col-sm-2 control-label no-padding-right">Điều khiển</label>

                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input id="chkStatusM" type="checkbox" data-size="mini" name="my-checkbox">
                                                                                @*<input id="chkStatus" type="checkbox" data-size="mini" name="my-checkbox">*@

                                        <span class="text" style="text-align:center; margin:2px; display:block">Kích hoạt</span>
                                    </label>
                                    <label>
                                        <input id="chkNewM" type="checkbox" data-size="mini" name="my-checkbox">
                                        <span class="text" style="text-align:center; margin:2px; display:block">Sản phẩm mới</span>
                                    </label>
                                    <label>
                                        <input id="chkSale" type="checkbox" data-size="mini" name="my-checkbox">
                                        <span class="text" style="text-align:center; margin:2px; display:block">Sản phẩm khuyến mại</span>
                                    </label>
                                    <label>
                                        <input id="chkHomeFlag" type="checkbox" data-size="mini" name="my-checkbox">
                                        <span class="text" style="text-align:center; margin:2px; display:block">Hiện ngoài trang chủ</span>
                                    </label>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>