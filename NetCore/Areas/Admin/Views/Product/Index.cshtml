@{
    ViewData["Title"] = "Index";
}
@section Scripts{

    <script src="~/app/controllers/product/whole-price-management.js"></script>

    <script src="~/app/controllers/product/quantitty-management.js"></script>
    <script src="~/app/controllers/product/image-management.js"></script>
    <script src="~/app/controllers/product/index.js"></script>
    <script src="~/vendor/jquery-easyui/js/jquery.easyui.min.js"></script>

    <script>
        var product = new productController();
        product.initialize();
    </script>
}
@section Styles{
    <link href="~/vendor/jquery-easyui/css/easyui.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="title_left">
    </div>
    <div class="title_right">
        <div class="col-md-6 col-sm-2 col-xs-12 form-group pull-right top_search ">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
            <a class="btn btn-danger" href="~/template/productImporttemplate.xlsx">Download Template</a>
            <button class="btn btn-primary" id="btnExport" type="button"><i class="fa fa-forward"></i></button>
            <button class="btn btn-primary" id="btnInport" type="button"><i class="fa fa-file-excel-o"></i></button>

        </div>
        <div class="col-md-3 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">Go !</button>
                </span>
            </div>
        </div>
        <div class="col-md-3 col-sm-5 col-xs-12 form-group  top_search ">
            
            <input id="ddlCategoryIdM" class="form-control" name="ddlCategoryIdM" value="" style=" float:left; margin:5px !important">
        </div>


    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> <small>Product List</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
               
                <table class="table">
                    <thead>
                        <tr>

                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>PriceSale</th>
                            <th class="col-lg-1">SortOrd</th>
                            <th>Active</th>
                            <th>Product Sale</th>
                            <th>Home Flag</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--paging-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mastache">

    <tr>

        <td> <a href="#" class=" btn-sm btnEdit" data-id="{{Id}}">{{{ImageThumbs}}}</a></td>
        <td> <a href="#" class=" btn-sm btnEdit" data-id="{{Id}}">{{Name}}</a></td>
        <td>{{CategoryName}}</td>
        <td><input class="form-control btnEditPrice" type="text" value="{{Price}}" data-id="{{Id}}" /></td>
        <td><input class="form-control btnEditPriceSale" type="text" value="{{PriceSale}}" data-id="{{Id}}" /></td>
        <td class="col-sm-2"><input class="form-control btnEditSortOrd " type="text" value="{{SortOrder}}" data-id="{{Id}}" /></td>
        <td align="center"><a href="#" data-id="{{Id}}" class="btnActive" title="{{Actives}}">{{{Active}}}</a></td>
        <td align="center"><a href="#" data-id="{{Id}}" class="btnProductSale" title="{{ProductSales}}">{{{ProductSale}}}</a></td>
        <td align="center"><a href="#" data-id="{{Id}}" class="btnHomeFlag" title="{{HomeFlags}}">{{{HomeFlag}}}</a></td>
        <th>
            <a href="#" class=" btn-sm btnEdit" data-id="{{Id}}"><i class="fa fa-pencil"></i></a>
            <a href="#" class=" btn-sm btnDelele" data-id="{{Id}}"><i class="fa fa-trash"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-images"><i class="fa fa-image"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-quantity"><i class="fa fa-hourglass-start"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-whole-price"><i class="fa fa-money"></i></a>


        </th>
    </tr>
</script>

<partial name="_AddEditModal.cshtml" />
<partial name="_ImportExcelModal.cshtml" />
<partial name="_QuantityManagement.cshtml" />
<partial name="_ImageManagement.cshtml" />
<partial name="_WholePriceManagement.cshtml" />
